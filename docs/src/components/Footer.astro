---
import type { Props } from '@astrojs/starlight/props';
import { Icon } from '@astrojs/starlight/components';

const links = {
    product: [
        { name: 'Features', href: 'https://memorylayer.ai#features' },
        { name: 'Use Cases', href: 'https://memorylayer.ai#use-cases' },
        { name: 'Pricing', href: 'https://memorylayer.ai#pricing' },
    ],
    developers: [
        { name: 'Documentation', href: '/' },
        { name: 'Python SDK', href: 'https://github.com/scitrera/memorylayer/tree/main/oss/memorylayer-sdk-python' },
        { name: 'TypeScript SDK', href: 'https://github.com/scitrera/memorylayer/tree/main/oss/memorylayer-sdk-typescript' },
        { name: 'MCP Server', href: 'https://github.com/scitrera/memorylayer/tree/main/oss/memorylayer-mcp-typescript' },
    ],
};
---

<footer class="sl-footer">
    <div class="footer-container">
        <div class="footer-grid">
            <!-- Brand column -->
            <div class="brand-column">
                <a href="https://memorylayer.ai" class="brand-link">
                    <div class="brand-logo">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"/>
                            <path d="M12 2v4m0 12v4M2 12h4m12 0h4"/>
                            <circle cx="12" cy="12" r="9" stroke-opacity="0.3"/>
                        </svg>
                    </div>
                    <span class="brand-name">memorylayer.ai</span>
                </a>
                <p class="brand-description">
                    Memory infrastructure for AI agents. Give your AI a brain that remembers.
                </p>
                <div class="social-links">
                    <a href="https://github.com/scitrera/memorylayer" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="social-link">
                        <Icon name="github" size="1.25rem" />
                    </a>
                    <a href="/" aria-label="Documentation" class="social-link">
                        <Icon name="open-book" size="1.25rem" />
                    </a>
                    <a href="mailto:sales@scitrera.com" aria-label="Email" class="social-link">
                        <Icon name="email" size="1.25rem" />
                    </a>
                </div>
            </div>

            <!-- Product links -->
            <div class="link-column">
                <h3 class="column-title">Product</h3>
                <ul class="link-list">
                    {links.product.map((link) => (
                        <li>
                            <a href={link.href} class="footer-link" target="_blank" rel="noopener noreferrer">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Developer links -->
            <div class="link-column">
                <h3 class="column-title">Developers</h3>
                <ul class="link-list">
                    {links.developers.map((link) => (
                        <li>
                            <a href={link.href} class="footer-link" target={link.href === '/' ? undefined : "_blank"} rel={link.href === '/' ? undefined : "noopener noreferrer"}>
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Bottom bar -->
        <div class="bottom-bar">
            <div class="copyright">
                <p>&copy; 2026 Scitrera | AI built for your business.</p>
            </div>
            <p class="powered-by">
                Powered by
                <a href="https://scitrera.ai" target="_blank" rel="noopener noreferrer" class="scitrera-link">
                    scitrera.ai
                </a>
            </p>
        </div>
    </div>
</footer>

<style>
    .sl-footer {
        border-top: 1px solid var(--sl-color-gray-5);
        background-color: var(--sl-color-bg);
        padding: 3rem 0 0;
        margin-top: 8rem;
    }

    .footer-container {
        max-width: var(--sl-content-width);
        margin: 0 auto;
        padding: 0 var(--sl-content-pad-x);
    }

    [data-template="splash"] .footer-container {
        max-width: 72rem;
    }

    @media (min-width: 50rem) {
        .footer-container {
             max-width: calc(var(--sl-content-width) + 2 * var(--sl-content-pad-x));
        }
        [data-template="splash"] .footer-container {
            max-width: 72rem;
        }
    }

    .footer-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    @media (min-width: 50rem) {
        .footer-grid {
            grid-template-columns: 2fr 1fr 1fr;
            gap: 3rem;
        }
    }

    .brand-column {
        grid-column: span 2;
    }

    @media (min-width: 50rem) {
        .brand-column {
            grid-column: span 1;
        }
    }

    .brand-link {
        display: flex;
        items-center: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
        text-decoration: none;
        color: var(--sl-color-white);
        font-weight: 600;
        font-size: var(--sl-text-h4);
    }

    .brand-logo {
        width: 2rem;
        height: 2rem;
        border-radius: 0.5rem;
        background: linear-gradient(135deg, var(--sl-color-accent), var(--sl-color-accent-low));
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .brand-logo svg {
        width: 1.25rem;
        height: 1.25rem;
    }

    .brand-description {
        color: var(--sl-color-gray-3);
        font-size: var(--sl-text-sm);
        line-height: 1.5;
        margin-bottom: 1rem;
        max-width: 20rem;
    }

    .social-links {
        display: flex;
        gap: 0.75rem;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.25rem;
        height: 2.25rem;
        border-radius: 0.5rem;
        background-color: var(--sl-color-gray-6);
        color: var(--sl-color-gray-3);
        border: 1px solid var(--sl-color-gray-5);
        transition: all 0.2s ease;
    }

    .social-link:hover {
        background-color: var(--sl-color-gray-5);
        color: var(--sl-color-white);
        border-color: var(--sl-color-gray-4);
    }

    .column-title {
        color: var(--sl-color-white);
        font-size: var(--sl-text-xs);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
    }

    .link-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .link-list li {
        margin-bottom: 0.5rem;
    }

    .footer-link {
        color: var(--sl-color-gray-3);
        text-decoration: none;
        font-size: var(--sl-text-sm);
        transition: color 0.2s ease;
    }

    .footer-link:hover {
        color: var(--sl-color-accent-high);
    }

    .bottom-bar {
        margin-top: 2rem;
        padding-top: 1.5rem;
        padding-bottom: 2rem;
        border-top: 1px solid var(--sl-color-gray-6);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    @media (min-width: 50rem) {
        .bottom-bar {
            flex-direction: row;
            justify-content: space-between;
        }
    }

    .copyright p {
        color: var(--sl-color-gray-4);
        font-size: var(--sl-text-xs);
        margin: 0;
    }

    .powered-by {
        color: var(--sl-color-gray-4);
        font-size: var(--sl-text-xs);
        display: flex;
        align-items: center;
        gap: 0.375rem;
        margin: 0;
    }

    .scitrera-link {
        color: var(--sl-color-accent);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    .scitrera-link:hover {
        color: var(--sl-color-accent-high);
    }

    :global([data-theme='light']) .sl-footer {
        background-color: var(--sl-color-gray-6);
        border-top-color: var(--sl-color-gray-5);
    }

    /* Override splash background if needed to be consistent with main CSS */
    [data-template="splash"] .sl-footer {
        background-color: var(--sl-color-gray-6);
    }

    :global([data-theme='light']) .brand-link,
    :global([data-theme='light']) .brand-name,
    :global([data-theme='light']) .column-title {
        color: var(--sl-color-white);
    }

    :global([data-theme='light']) .social-link {
        background-color: var(--sl-color-gray-6);
        border-color: var(--sl-color-gray-5);
    }

    :global([data-theme='light']) .social-link:hover {
        background-color: var(--sl-color-gray-5);
    }

    :global([data-theme='light']) .footer-link {
        color: var(--sl-color-gray-3);
    }

    :global([data-theme='light']) .footer-link:hover {
        color: var(--sl-color-accent-high);
    }

    :global([data-theme='light']) .brand-description {
        color: var(--sl-color-gray-3);
    }

    :global([data-theme='light']) .bottom-bar {
        border-top-color: var(--sl-color-gray-5);
    }
</style>
